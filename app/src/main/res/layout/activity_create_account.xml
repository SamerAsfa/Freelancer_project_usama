<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.example.myapplication.myapplication.ui.CreateAccountActivity" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.StartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/loginText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Sign up"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/dontTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Already have an account?"
                app:layout_constraintStart_toStartOf="@id/loginText"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/createTextView"
                app:layout_constraintTop_toBottomOf="@id/loginText" />

            <TextView
                android:id="@+id/createTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Log In"
                android:textColor="#233975"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/dontTextView"
                app:layout_constraintTop_toBottomOf="@id/loginText" />

            <EditText
                android:id="@+id/organizationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:hint="Organization ID"
                android:inputType="number"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createTextView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/orgCodeCheckFailureMaterialCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/organizationEditText"
                app:layout_constraintStart_toStartOf="@+id/organizationEditText"
                app:layout_constraintTop_toBottomOf="@+id/organizationEditText">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/org_not_found"
                    android:textColor="#BC1A1A"
                    android:textSize="12sp" />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/orgCodeCheckSuccessMaterialCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/organizationEditText"
                app:layout_constraintStart_toStartOf="@+id/organizationEditText"
                app:layout_constraintTop_toBottomOf="@+id/organizationEditText">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/vapeplus"
                    android:textColor="#193566"
                    android:textSize="12sp" />
            </com.google.android.material.card.MaterialCardView>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:hint="Name"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/organizationEditText" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:layout_marginStart="20dp"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameEditText" />


            <EditText
                android:id="@+id/reEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:hint="Retype-E-mail"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailEditText" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/passwordRequirementPopupMaterialCardView"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="@+id/reEmailEditText"
                app:layout_constraintTop_toTopOf="@+id/reEmailEditText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/password_must_meet"
                        android:textColor="#193566"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/ic_green_right"
                        android:text="@string/at_least_one_letter"
                        android:textColor="#00B069"
                        android:textSize="7sp" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#DDE4F1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/ic_red_close"
                        android:text="@string/at_least_one_capital_letter"
                        android:textColor="#BC1A1A"
                        android:textSize="7sp" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#DDE4F1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/ic_green_right"
                        android:text="@string/at_least_one_number"
                        android:textColor="#00B069"
                        android:textSize="7sp" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#DDE4F1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/ic_red_close"
                        android:text="@string/be_at_least_characters"
                        android:textColor="#BC1A1A"
                        android:textSize="7sp" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <EditText
                android:id="@+id/numberPhoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:layout_marginEnd="20dp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:hint="Number Phone"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reEmailEditText" />


   <!--         <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:imeOptions="actionNext"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="Password"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numberPhoneEditText" />

-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numberPhoneEditText"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/password"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:ems="15"/>
            </com.google.android.material.textfield.TextInputLayout>



     <!--       <EditText
                android:id="@+id/retypePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                android:hint="ReTypePassword"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordEditText" />
-->

            <com.google.android.material.textfield.TextInputLayout
                android:padding="10dp"
                app:passwordToggleEnabled="true"
                android:id="@+id/confirmPasswordTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textSize="12sp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_type_name"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passwordTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/confirmPassword"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="@string/retype_password"
                    android:inputType="textPassword"
                    />
                <!--android:ems="15"-->
            </com.google.android.material.textfield.TextInputLayout>




            <TextView
                android:id="@+id/passwordMatchedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableRight="@drawable/ic_green_right"
                android:text="@string/password_matched"
                android:textColor="#00B069"
                android:drawablePadding="8dp"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/confirmPasswordTextInputLayout"
                app:layout_constraintStart_toStartOf="@+id/confirmPasswordTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTextInputLayout" />

            <TextView
                android:id="@+id/passwordNotMatchedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableRight="@drawable/ic_red_close"
                android:text="@string/password_not_matched"
                android:textColor="#BC1A1A"
                android:visibility="gone"
                android:drawablePadding="8dp"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/confirmPasswordTextInputLayout"
                app:layout_constraintStart_toStartOf="@+id/confirmPasswordTextInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTextInputLayout" />

            <Button
                android:id="@+id/custom_btn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/confirm_button_shape"
                android:text="Create Account"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmPasswordTextInputLayout" />


            <TextView
                android:id="@+id/toolsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="By continuing, you agree to accept our \nPrivacy Policy and Terms of Service."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/custom_btn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
