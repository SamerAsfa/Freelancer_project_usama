<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="10dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/wh"
                app:layout_constraintEnd_toStartOf="@id/userNameTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/userImage"
                tools:text="UOK" />


            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userNameTextView"
                tools:text="UOK" />


            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeTextView"
                tools:text="UOK" />

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/mainRippleBackground"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateTextView"
                app:rb_color="#EF0000"
                app:rb_duration="3000"
                app:rb_radius="32dp"
                app:rb_rippleAmount="4"
                app:rb_scale="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/centerImage"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ro" />

                    <TextView
                        android:id="@+id/punchInTextView"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="65dp"
                        android:gravity="center"
                        android:text="Punch In"
                        android:textColor="@android:color/white"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </com.skyfishjy.library.RippleBackground>


            <TextView
                android:id="@+id/locationNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mainRippleBackground"
                tools:text="UOK" />

            <ImageView
                android:id="@+id/locationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/vector_location"
                app:layout_constraintBottom_toBottomOf="@id/locationNameTextView"
                app:layout_constraintEnd_toStartOf="@id/locationNameTextView"
                app:layout_constraintTop_toTopOf="@id/locationNameTextView" />


            <com.skyfishjy.library.RippleBackground
                android:id="@+id/punchOut"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toStartOf="@id/breaks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationImage"
                app:rb_color="#2FF64F"
                app:rb_duration="5000"
                app:rb_radius="32dp"
                app:rb_rippleAmount="3"
                app:rb_scale="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/punchInImage"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/gro" />

                    <TextView
                        android:id="@+id/punchOutTextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text="PunchOut"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>


            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/breaks"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toStartOf="@id/leave"
                app:layout_constraintStart_toEndOf="@id/punchOut"
                app:layout_constraintTop_toBottomOf="@id/locationImage"
                app:rb_color="#673AB7"
                app:rb_duration="5000"
                app:rb_radius="32dp"
                app:rb_rippleAmount="3"
                app:rb_scale="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/breakImage"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/purple" />

                    <TextView
                        android:id="@+id/breakTextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text="Break"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </com.skyfishjy.library.RippleBackground>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/leave"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/breaks"
                app:layout_constraintTop_toBottomOf="@id/locationImage"
                app:rb_color="#2D44C5"
                app:rb_duration="5000"
                app:rb_radius="32dp"
                app:rb_rippleAmount="3"
                app:rb_scale="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/leaveImage"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/bluea" />

                    <TextView
                        android:id="@+id/breaksTextView"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text="Leave"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </com.skyfishjy.library.RippleBackground>


            <ImageView
                android:id="@+id/punchInImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:layout_marginStart="25dp"
                android:background="@drawable/vector_time"
                app:layout_constraintTop_toBottomOf="@id/punchOut"
                app:layout_constraintStart_toStartOf="@id/punchOut"
                tools:text="UOK" />

            <TextView
                android:id="@+id/punchInSTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/punchInImageView"
                app:layout_constraintEnd_toEndOf="@id/punchInImageView"
                app:layout_constraintStart_toStartOf="@id/punchInImageView"
                tools:text="UOK" />


            <TextView
                android:id="@+id/punchInStaticTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Punch In"
                android:textColor="#585A66"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/punchInSTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/punchInSTextView"
                app:layout_constraintStart_toStartOf="@id/punchInSTextView"
                tools:text="Punch In" />


            <ImageView
                android:id="@+id/punchOutImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:layout_marginEnd="25dp"
                android:background="@drawable/vector_time"
                app:layout_constraintTop_toBottomOf="@id/punchOut"
                app:layout_constraintEnd_toEndOf="@id/leave"
                tools:text="UOK" />

            <TextView
                android:id="@+id/punchOutSateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/punchOutImageView"
                app:layout_constraintEnd_toEndOf="@id/punchOutImageView"
                app:layout_constraintStart_toStartOf="@id/punchOutImageView"
                tools:text="UOK" />

            <TextView
                android:id="@+id/punchOutStaticTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Punch In"
                android:textColor="#585A66"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/punchOutSateTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/punchOutSateTextView"
                app:layout_constraintStart_toStartOf="@id/punchOutSateTextView"
                tools:text="Punch Out" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
